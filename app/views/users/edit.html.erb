<div class="body-wrap">
  <div id="st-container" class="st-container">
    <div class="st-pusher">
      <div class="st-content">
        <div class="st-content-inner">
          <section class="slice slice-lg sct-color-1">
            <div class="container">
              <div class="row">
                <div class="col-md-4 col-md-offset-4">
                  <div class="form-user style-1 rounded has-shadow-1">
                    <div class="form-header text-center">
                      <h2 class="form-header-title">User info</h2>
                    </div>
                    <div id="error_explanation">
                    <% if @user.errors.any? %>
                      <h2><%= @user.errors.count %>errors occurred!</h2>
                      <ul>
                        <% @user.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                      <% end %>
                      </ul>
                    <% end %>
                    </div>
                    <div class="form-body">
                      <%= form_for(@user) do |f| %>
                        <div class="form-group has-icon">
                          <h3>Name</h3>
                          <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"name"%>
                          <h3>Introduction</h3>
                          <%= f.text_field :introduction, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"introduction"%>
                          <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
                        </div>
                        <div class="form-group has-icon">
                          <div class="user-edit-image">
                            <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
                          </div>
                          <label class="control-label sr-only" for="inputEmail">ProfileImage</label>
                          <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
                        </div>
                        <%= f.submit "Update User", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
                      <% end %>
                      <!-- ここにform_forを追加します -->
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </section>
        </div>
      </div>
    </div>
  </div>
</div>