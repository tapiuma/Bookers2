
<div class="body-wrap">
  <div id="st-container" class="st-container">
    <div class="st-pusher">
      <div class="st-content">
        <div class="st-content-inner">
          <section class="slice slice-lg sct-color-1">
            <div class="container">
              <div class="row">
                <div class="col-md-4 col-md-offset-4">
                  <div class="form-user style-1 rounded has-shadow-1">
                    <div class="form-header text-center">
                      <h2 class="form-header-title">Editing Book</h2>
                    </div>
                    <% if @book.errors.any? %>
                      <%= @book.errors.count %>errors occurred!</br>
                      <% @book.errors.full_messages.each do |message| %>
                      <%= message %></br>
                    <% end %>
                    <% end %>
                    <div class="form-body">
                      <%= form_for(@book) do |f| %>
                        <div class="form-group has-icon">
                          <h3>Title</h3>
                          <%= f.text_field :title, autofocus: true, class:"form-control", id:"editingbook", placeholder:"name"%>
                          <h3>Opinion</h3>
                          <%= f.text_field :body, autofocus: true, class:"form-control", id:"editingbok", placeholder:"introduction"%>
                          <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
                        </div>
                        <%= f.submit "Update Book", class:"btn btn-lg btn-primary btn-block btn-base-1 mt-20" %>
                      <% end %>
                      <!-- ここにform_forを追加します -->
                      <%= link_to "Show", book_path(@book.id) %>
                      <nobr>|</nobr>
                      <%= link_to "Back", "/books"%>    
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </section>
        </div>
      </div>
    </div>
  </div>
</div>
